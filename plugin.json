{
  "name": "claude-translator",
  "version": "3.2.0",
  "description": "DOCX/PDF 도서 번역 워크플로우 - Agent Teams 기반 다국어 지원 (ko, en, ja, zh, es, fr, de)",
  "author": "manseok-song",
  "repository": "https://github.com/manseok-song/claude-translator-plugin",
  "license": "MIT",
  "engines": {
    "claude-code": ">=1.0.0"
  },
  "dependencies": {
    "pandoc": ">=2.0.0",
    "python3": ">=3.8.0",
    "pdf2docx": ">=0.5.0",
    "ebooklib": ">=0.18"
  },
  "skills": [
    "translate-book"
  ],
  "agents": [
    "glossary-extractor",
    "unified-translator",
    "quality-reviewer",
    "finalizer",
    "final-reviewer"
  ],
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "permissions": {
    "allow": [
      "Task",
      "Read",
      "Write",
      "Edit",
      "Bash(pandoc:*)",
      "Bash(mkdir:*)",
      "Bash(cp:*)",
      "Bash(cat:*)",
      "Bash(ls:*)",
      "Bash(mv:*)",
      "Bash(wc:*)",
      "Bash(sed:*)",
      "Bash(tr:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(echo:*)",
      "Bash(for:*)",
      "Bash(seq:*)",
      "Bash(python3:*)",
      "Bash(python:*)",
      "Bash(pip:*)"
    ]
  }
}
